<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Panel</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', 'sans-serif'],
          },
          colors: {
            dark: '#0f172a',
            lightDark: '#1e293b',
            accent: '#3b82f6'
          },
          backdropBlur: {
            xs: '2px',
          }
        }
      }
    };
  </script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 min-h-screen text-white font-sans">

  <header class="bg-accent/20 backdrop-blur-sm border-b border-white/10 py-5 shadow-md">
    <div class="max-w-7xl mx-auto px-4 flex justify-between items-center">
      <h1 class="text-3xl font-bold text-white">Admin Panel</h1>
      <p class="text-sm text-gray-300">Welcome, Admin</p>
    </div>
  </header>

  <main class="max-w-7xl mx-auto px-4 py-10">

    
    <div class="mb-8 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
      <a href="/adduser" class="bg-accent hover:bg-blue-700 text-white py-3 px-4 rounded-lg text-center transition shadow-md">Add User</a>
      <a href="/addproduct" class="bg-accent hover:bg-blue-700 text-white py-3 px-4 rounded-lg text-center transition shadow-md">Add Product</a>
      <a href="/adminproduct" class="bg-accent hover:bg-blue-700 text-white py-3 px-4 rounded-lg text-center transition shadow-md">Show Products</a>
    </div>

    
    <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl shadow-xl overflow-x-auto p-4">
      <table class="min-w-full table-auto text-sm text-left text-white">
        <thead class="bg-white/10 text-gray-300 uppercase text-xs">
          <tr>
            <th class="px-4 py-3">User ID</th>
            <th class="px-4 py-3">Username</th>
            <th class="px-4 py-3">Email</th>
            <th class="px-4 py-3">User Phone</th>
            <th class="px-4 py-3">Actions</th>
            <th class="px-4 py-3">user status</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/10">
          <% users.forEach(user => { %>
            <tr class="hover:bg-white/10 transition">
              <td class="px-4 py-3"><%= user._id %></td>
              <td class="px-4 py-3"><%= user.name %></td>
              <td class="px-4 py-3"><%= user.email %></td>
              <td class="px-4 py-3"><%= user.phone || 'N/A' %></td>
              <td class="px-4 py-3"><%= user.status %></td>
              <td class="px-4 py-3 flex gap-3 items-center">
                <a href="/updateuser/<%= user._id %>" class="text-blue-400 hover:text-blue-600 text-xl" title="Edit">‚úèÔ∏è</a>
                <a href="/adminpanel/users/<%= user._id %>" onclick="return confirm('Are you sure you want to delete this user?')" class="text-red-500 hover:text-red-700 text-xl" title="Delete">üóëÔ∏è</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

  </main>
</body>
</html>